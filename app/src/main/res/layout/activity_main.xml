<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextUnits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="@string/enter_units_kwh"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editTextRebate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="@string/enter_rebate_percentage_0_5"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calculate"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:paddingTop="16dp" />

    <Button
        android:id="@+id/buttonAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp" />

    <!-- Additional TextViews for contact information -->
    <TextView
        android:id="@+id/textViewProfilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_picture"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_profile_picture" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_your_email_example_com"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_email" />

    <TextView
        android:id="@+id/textViewPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_1234567890"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_phone" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_your_email_example_com"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_email" />


</LinearLayout>



