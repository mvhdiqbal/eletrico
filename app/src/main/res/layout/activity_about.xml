<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewProfilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Picture"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_profile_picture"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="your.email@example.com"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_email"
        android:layout_below="@id/textViewProfilePicture"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234567890"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_phone"
        android:layout_below="@id/textViewEmail"/>

    <TextView
        android:id="@+id/textViewGithub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GitHub Repository"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_github"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textViewPhone"
        android:layout_marginTop="24dp"/>

</RelativeLayout>
